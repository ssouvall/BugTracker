@page
@model ConfirmEmailModel
@{
    ViewData["Title"] = "Confirm email";
    Layout = "/Views/Shared/_LoginLayout.cshtml";

}
<div class="col-lg-4 col-md-8 col-sm-12 mt-5 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title lead">@ViewData["Title"]</h3>
        </div>
        <div class="card-body">
            <p>@Model.StatusMessage</p>

            <a class="btn btn-primary btn-lg" asp-area="Identity" asp-page="/Account/Login"><i class="fa fa-sign-in"></i><span> SIGN IN</span></a>

        </div>
    </div>
</div>