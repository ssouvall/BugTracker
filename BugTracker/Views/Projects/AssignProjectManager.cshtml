@model BugTracker.Models.ViewModels.ProjectManagerViewModel

@{
    ViewData["Title"] = "Assign Users";
}

<div class="container p-md-5">
   <div class="row">
        <div class="col-md-8 col-sm-12 mx-auto">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title"> Assign Project Manager: @Model.Project.Name</h3>
                </div>

                <div class="card-body">
                    <form asp-action="AssignProjectManager" asp-controller="Projects" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="@Model.Project.Id">
                        <input type="hidden" asp-for="@Model.Project.Name">
                        <div class="col-12">
                            <div class="form-group">
                                <select asp-for="@Model.SelectedUser" class="form-control" asp-items="@Model.Users"></select>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-lg-offset-2 col-lg-10">
                                <input type="submit" class="btn btn-success" value="Assign" />
                                <a asp-action="Details" asp-controller="Projects" asp-route-id="@Model.Project.Id" class="btn btn-secondary">Back to Project</a>

                            </div>
                        </div>
                    </form>
                    
                </div>
                
            </div>
        </div>
        <!--End Hover Rows-->
    </div>
    
</div>