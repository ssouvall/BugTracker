@model BugTracker.Models.Project

@{
    ViewData["Title"] = "Delete";
}

<div class="col-lg-4 col-md-8 col-sm-12 mx-auto mt-5">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Delete</h3>
        </div>
        <div class="card-body">
            <h6>Are you sure you want to archive this project?</h6>
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Archive" class="btn btn-danger" /> |
                <a asp-action="AllProjects" class="btn btn-secondary">Back to List</a>
            </form>
        </div>
    </div>
</div>



