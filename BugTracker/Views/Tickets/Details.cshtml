@model BugTracker.Models.Ticket
@using BugTracker.Services.Interfaces
@inject IBTFileService _fileService

@{
    ViewData["Title"] = "Details";
}

<h1>@Model.Title</h1>

<div>
    <hr />
</div>
<div class="row">
    <div class="col-6">
        <div class="card rounded shadow m-3 p-3">
            <div class="card-body">
                <h5 class="card-title">@Model.Description</h5>
                <p class="card-text">Ticket Status: @Model.TicketStatus.Name</p>
                @if (Model.TicketStatus.Name == "Unassigned" || Model.TicketStatus.Name == "New")
                {
                    <div class="progress">
                        <div class="progress-bar" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                }
                else if (Model.TicketStatus.Name == "Development")
                {
                    <div class="progress">
                        <div class="progress-bar" role="progressbar" style="width: 50%" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                }
                else if (Model.TicketStatus.Name == "Testing")
                {
                    <div class="progress">
                        <div class="progress-bar" role="progressbar" style="width: 75%" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                }
                else if (Model.TicketStatus.Name == "Resolved")
                {
                    <div class="progress">
                        <div class="progress-bar" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                }

                @if (Model.DeveloperUser != null)
                {
                    <p class="card-text mt-3">Assigned Developer: @Model.DeveloperUser.FullName</p>

                    <a asp-action="AssignTicket" asp-controller="Tickets" asp-route-ticketId="@Model.Id" class="btn btn-success">Change Developer</a>
                }
                else
                {
                    <p class="card-text mt-3">Assigned Developer: Unassigned</p>

                    <a asp-action="AssignTicket" asp-controller="Tickets" asp-route-ticketId="@Model.Id" class="btn btn-success">Assign Developer</a>
                }



            </div>
        </div>
        <div class="card rounded shadow m-3 p-3">
            <div class="card-body">
                <h5>Ticket Details</h5>
                <p class="card-text">Created: @Model.Created.ToString("MMM dd, yyyy")</p>
                <p class="card-text">Ticket Type: @Model.TicketType.Name</p>
                <p class="card-text">Ticket Priority: @Model.TicketPriority.Name</p>
                <p class="card-text">Ticket Status: @Model.TicketStatus.Name</p>
            </div>
        </div>
        <div class="card rounded shadow m-3 p-3">
            <div class="card-body">
                <h5>Ticket Attachments</h5>
                <form enctype="multipart/form-data">
                    <div class="form-group">
                        <div class="custom-file">
                            <input type="file" name="file" class="form-control-file custom-file-input" multiple onchange="processSelectedFiles(this)" />
                            <label class="control-label custom-file-label text-left text-muted" id="file-label">Choose a File</label>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-6">
        <div class="card rounded shadow m-3 p-3">
            <div class="card-body">
                <h5>Ticket Comments</h5>
                <form asp-action="Create" asp-controller="TicketComments" method="post">
                    @*----which post did it come from...?-----*@
                    <input type="hidden" name="TicketId" value="@Model.Id" />
                    @*----------*@
                    <h5 class="text-center">ADD A COMMENT</h5>
                    <textarea class="form-control mb-3" rows="5" id="summernote" name="editordata"></textarea>
                    <button type="submit" class="btn btn-primary btn-block btn-sm">Submit!</button>
                </form>
                <div class="col-12 mx-auto">

                    <hr />
                    @*show user comments*@
                    <div class="btn-sm btn-dark btn-block w-100">@Model.Comments.Count Comment(s)</div>

                    @foreach (var comment in Model.Comments.OrderByDescending(c => c.Created))
                    {
                        <div class="row">
                            <div class="media border mr-3 ml-3 p-3 w-100">
                                <img src="@_fileService.DecodeFile(comment.User.AvatarFileData, comment.User.AvatarContentType)" alt="@comment.User.FullName" class="mr-3 mt-3 rounded-circle" style="width:60px;">
                                <div class="media-body">
                                    
                                        <h5>@comment.User.FullName <small><i>Posted on @comment.Created.ToString("MMM dd, yyyy")</i></small></h5>
                                        <p>@comment.Comment</p>
                                
                                </div>
                            </div>
                        </div>
                    }


                </div>
            </div>
        </div>
        <div class="card rounded shadow m-3 p-3">
            <div class="card-body">
                <h5>Ticket History</h5>
                <div class="row d-flex mt-70 mb-70">
                    <div class="row">
                        <div class="col-md-10">
                            <ul class="timeline">
                                @foreach (TicketHistory history in Model.History)
                                {
                                    <li>
                                        <p>@history.Description</p>
                                        <small>By @history.User.FullName on @history.Created.ToString("MMM dd, yyyy")</small>
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
              </div>
        </div>
</div>


<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
