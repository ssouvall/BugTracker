@model BugTracker.Models.Ticket
@using BugTracker.Services.Interfaces
@inject IBTFileService _fileService

@{
    ViewData["Title"] = "Details";
}

<h1>@Model.Title</h1>

<div>
    <hr />
</div>
<div class="row">
    <div class="col-6">
        <div class="card rounded shadow m-3 p-3">
            <div class="card-body">
                <h5 class="card-title">@Model.Description</h5>
                <p class="card-text">Ticket Status: @Model.TicketStatus.Name</p>
                @if (Model.TicketStatus.Name == "Unassigned" || Model.TicketStatus.Name == "New")
                {
                    <div class="progress">
                        <div class="progress-bar" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                }
                else if (Model.TicketStatus.Name == "Development")
                {
                    <div class="progress">
                        <div class="progress-bar" role="progressbar" style="width: 50%" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                }
                else if (Model.TicketStatus.Name == "Testing")
                {
                    <div class="progress">
                        <div class="progress-bar" role="progressbar" style="width: 75%" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                }
                else if (Model.TicketStatus.Name == "Resolved")
                {
                    <div class="progress">
                        <div class="progress-bar" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                }

                @if (Model.DeveloperUser != null)
                {
                    <p class="card-text mt-3">Assigned Developer: @Model.DeveloperUser.FullName</p>

                    <a asp-action="AssignTicket" asp-controller="Tickets" asp-route-ticketId="@Model.Id" class="btn btn-success">Change Developer</a>
                }
                else
                {
                    <p class="card-text mt-3">Assigned Developer: Unassigned</p>

                    <a asp-action="AssignTicket" asp-controller="Tickets" asp-route-ticketId="@Model.Id" class="btn btn-success">Assign Developer</a>
                }



            </div>
        </div>
        <div class="card rounded shadow m-3 p-3">
            <div class="card-body">
                <h5>Ticket Details</h5>
                <p class="card-text">Created: @Model.Created.ToString("MMM dd, yyyy")</p>
                <p class="card-text">Ticket Type: @Model.TicketType.Name</p>
                <p class="card-text">Ticket Priority: @Model.TicketPriority.Name</p>
                <p class="card-text">Ticket Status: @Model.TicketStatus.Name</p>
            </div>
        </div>
        <div class="card rounded shadow m-3 p-3">
            <div class="card-body">
                <h5>Ticket Attachments</h5>
                <div class="row clearfix">
                    @foreach (TicketAttachment item in Model.Attachments)
                    {
                        <div class="col-sm-2">
                            <div class="card">
                                <div class="file">
                                    <a asp-action="ShowFile" asp-controller="Tickets" asp-route-id="@item.Id">
                                        <div class="hover">
                                            <a asp-action="Delete" asp-controller="TicketAttachments" asp-route-id="@item.Id" type="button" data-toggle="modal" data-target="#deleteAttachmentModal" class="btn-sm btn-icon btn-danger">
                                                <i class="fa fa-xs fa-trash"></i>
                                            </a>
                                        </div>
                                        <div class="icon">
                                            <img src="@_fileService.GetFileIcon(item.FileName)" style="height:60px;width:60px" />
                                        </div>
                                        <div class="file-name">
                                            <p class="m-b-5 text-muted">@System.IO.Path.GetFileNameWithoutExtension(item.FileName)</p>
                                            <small>Size: @_fileService.FormatFileSize(item.FileData.Length) <span class="date text-muted">@item.Created.ToString("MMM dd, yyyy")</span></small>
                                        </div>
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="modal fade" id="deleteAttachmentModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="deleteModalLabel">Confirm Delete</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        <p>Are you sure you want to delete this attachment?</p>
                                    </div>
                                    <div class="modal-footer">
                                        <form asp-controller="TicketAttachments" asp-action="Delete" asp-route-id="@item.Id">
                                            <input type="hidden" asp-for="@item.Id" />
                                            <button type="button" class="btn btn-outline-dark" data-dismiss="modal">Close</button>
                                            <input type="submit" value="Delete" class="btn btn-danger">
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                }
                </div>
                <div>
                    <form asp-action="Create" asp-controller="TicketAttachments" enctype="multipart/form-data" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="@Model.Id" name="TicketId">


                        <div class="media-body ml-3">
                            <label class="form-label d-block mb-2">Add Attachment</label>
                            <label>
                                Description
                                <input asp-for="@Model.Attachments.FirstOrDefault().Description" type="text" class="form-control" />
                            </label><br />
                            <label class="btn btn-outline-primary btn-sm">
                                <input asp-for="@Model.Attachments.FirstOrDefault().FormFile" type="file" />
                            </label>
                            <button type="submit" class="btn btn-outline-secondary btn-sm md-btn-flat">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="col-6">
        <div class="card rounded shadow m-3 p-3">
            <div class="card-body">
                <h5>Ticket Comments</h5>
                <form asp-action="Create" asp-controller="TicketComments" method="post">
                    @*----which post did it come from...?-----*@
                    <input type="hidden" name="TicketId" value="@Model.Id" />
                    @*----------*@
                    <h5 class="text-center">ADD A COMMENT</h5>
                    <textarea class="form-control mb-3" rows="5" id="summernote" name="editordata"></textarea>
                    <button type="submit" class="btn btn-primary btn-block btn-sm">Submit!</button>
                </form>
                <div class="col-12 mx-auto">

                    <hr />
                    @*show user comments*@
                    <div class="btn-sm btn-dark btn-block w-100">@Model.Comments.Count Comment(s)</div>

                    @foreach (var comment in Model.Comments.OrderByDescending(c => c.Created))
                    {
                        <div class="row">
                            <div class="media border mr-3 ml-3 p-3 w-100">
                                @*<img src="@_fileService.DecodeFile(comment.User.AvatarFileData, comment.User.AvatarContentType)" alt="@comment.User.FullName" class="mr-3 mt-3 rounded-circle" style="width:60px;">*@
                                <div class="media-body">

                                    <h5>@comment.User.FullName <small><i>Posted on @comment.Created.ToString("MMM dd, yyyy")</i></small></h5>
                                    <p>@comment.Comment</p>

                                </div>
                            </div>
                        </div>
                    }


                </div>
            </div>
        </div>
        <div class="card rounded shadow m-3 p-3">
            <div class="card-body">
                <h5>Ticket History</h5>
                <div class="row d-flex mt-70 mb-70">
                    <div class="row">
                        <div class="col-md-10">
                            <ul class="timeline pr-5">
                                @foreach (TicketHistory history in Model.History)
                                {
                                    <li class="pr-5">
                                        <p class="pl-5">@history.Description</p>
                                        <small class="pl-5">By @history.User.FullName on @history.Created.ToString("MMM dd, yyyy")</small>
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

        


<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
